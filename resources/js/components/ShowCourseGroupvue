<template>
  <div>
    <div class="container">

      <h2>Lecturer : {{ lecturer.id }}</h2>
      <div class="panel panel-primary">
        <div class="panel-heading">
            View Lecturer
            <router-link to="/lecturers" class="btn btn-info float-right" style="margin-top:-7px;margin-left:2px;">Lecturer List</router-link>
        </div>
        <div class="panel-body">
          <table>
            <tr>
              <th>Name:</th>
              <td>{{ lecturer.name }}</td>
            </tr>
            <tr>
              <th>Telephone:</th>
              <td>{{ lecturer.mobile }}</td>
            </tr>
            <tr>
              <th>Email:</th>
               <td>{{ lecturer.email }}</td>
            </tr>
            <tr>
              <th>Gender:</th>
               <td>{{ lecturer.gender }}</td>
            </tr>        
          </table>
        </div>
      </div>
    </div>
  </div>
</template>
 
<script>
export default {
  data() {
    return {
      lecturer: {},
    };
  },
  created() {
    this.axios
      .get(`/api/lecturers/${this.$route.params.id}`)
      .then((res) => {
        this.lecturer = res.data;
      });
  },
};
</script>